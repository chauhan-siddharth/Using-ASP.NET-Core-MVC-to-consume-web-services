@model Project3_FinalExam.ViewModels.StaffViewModel

@{
    ViewData["Title"] = "Staff-";
}

@section CSS {
    <style>
        h2 {
            color: red;
        }

        body {
            background: #4CA1AF; /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #C4E0E5, #4CA1AF); /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #C4E0E5, #4CA1AF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
    </style>
}

<h2>@Model.Title</h2>

@for (var i = 0; i < Model.Staff.Count; i++)
{
    <div class="row">
        <div class="col-sm-3">
            <div class="thumbnail" id=@String.Concat("myDiv:", i.ToString()) onclick="getName(id)">
                <img src="@Model.Staff[i].imagePath" style="height:200px;width:190px" alt="" />
            </div>
            <div class="caption">
                <h3 style="font-size:medium">
                    @Model.Staff[i].name
                </h3>
            </div>
        </div>
        @{
            if (i < Model.Staff.Count - 1)
            {
                i++;
            }
            else
            {
                break;
            }
        }
        <div class="col-sm-3">
            <div class="thumbnail" id=@String.Concat("myDiv:", i.ToString()) onclick="getName(id)">
                <img src="@Model.Staff[i].imagePath" style="height:200px;width:190px" alt="" />
            </div>
            <div class="caption">
                <h3 style="font-size:medium">
                    @Model.Staff[i].name
