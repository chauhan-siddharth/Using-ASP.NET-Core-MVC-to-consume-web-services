@model Project3_FinalExam.ViewModels.AboutViewModel
@{
    ViewData["Title"] = "Home-";
}
@section CSS{

    <style>
        #intro {
            text-align: center;
        }

        #particles-js {
            width: 100%;
            height: auto;
            z-index: -1;
            background-color: black;
            top: 0;
            left: 0
        }

            #particles-js canvas {
                display: block;
                vertical-align: bottom;
                -webkit-transform: scale(1);
                -ms-transform: scale(1);
                transform: scale(1);
                opacity: 1;
                -webkit-transition: opacity .8s ease, -webkit-transform 1.4s ease;
                transition: opacity .8s ease, transform 1.4s ease
            }
        #carouselExampleCaptions {
            position: absolute;
            top: 20%;
            width: 70vw;
            height: 70vh;
            left: 15vw;
            opacity:0.8;
        }
        body {
            background: #4CA1AF; 
            background: -webkit-linear-gradient(to right, #C4E0E5, #4CA1AF);
            background: linear-gradient(to right, #C4E0E5, #4CA1AF); 
        }
    </style>
}



<div class="text-center">
    <h1 class="display-4">Information Sciences and Technologies</h1>
    <div id="particles-js"></div>


</div>


@foreach (var under in Model.About)
{
    <div>
        <div id="particles-js"></div>
        <div class="container">

            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/images/img8.jpg" style="height:70vh" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">



                            <div id=@String.Concat("myDiv", under.title)>

                                <q style="color:white">@under.quote</q>
                                <p>@under.quoteAuthor</p>

                            </div>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/images/img6.jpg" style="height:70vh" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">


                            <div id=@String.Concat("myDiv", under.title)>

                                <q>@under.quote</q>
                                <p>@under.quoteAuthor</p>

                            </div>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/images/img7.jpg" style="height:70vh" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <div id=@String.Concat("myDiv", under.title)>

                                <q>@under.quote</q>
                                <p>@under.quoteAuthor</p>

                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


        </div>
    </div>
    <div id="intro">
        <h1>@under.title</h1>
        <p>@under.description</p>
    </div>
}



@section Scripts{
    
    <script type="text/javascript" src="~/js/particle/particles.js-master/particles.min.js"></script>
    <script type="text/javascript" src="~/js/particle/particles.js-master/demo/js/app.js"></script>

   <!-- <link rel="stylesheet" href="~/js/particle/particles.js-master/demo/css/style.css"> -->

    <script>
        $('.carousel').carousel({
            interval: 5000
        })
    </script>


}


