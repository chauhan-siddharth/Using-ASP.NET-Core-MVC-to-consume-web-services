<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] iSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
	@RenderSection("CSS", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RIT iSchool</a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Our People
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Faculty" asp-action="GetFaculty">Faculty</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Staff" asp-action="GetStaff">Staff</a>

                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Degrees
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="nav-link text-dark" asp-area="" asp-controller="UnderGraduate" asp-action="GetUndergraduate">Undergraduate Degrees</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Graduate" asp-action="GetGraduate">Graduate Degrees</a>

                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Minors" asp-action="GetMinors">Minors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EmploymentTable" asp-action="GetEmploymentTable">Employment</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Research
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="nav-link text-dark" asp-area="" asp-controller="ResearchInterestArea" asp-action="GetResearchInterestArea">By Interest Area</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="ResearchFaculty" asp-action="GetResearchFaculty">By Faculty</a>

                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Maps">Maps</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="con">
    <div class="container-fluid">
        @*<main role="main" class="pb-3">*@
            @RenderBody()
        @*</main>*@
    </div>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: center">
            &copy; 2020 - Rochester Institute of Technology
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
